<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@android:color/white">
    <TextView
        android:id="@+id/detail_titleTxt"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:text="Default Text"
        android:textSize="30sp"
        android:gravity="center"
        android:textStyle="italic|bold"
        android:fontFamily="serif"
        android:textColor="@android:color/white"
        android:background="@color/title_background" />
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="movieapp.shalan.net.sayed.movieapp.Fragments.DetailFragment"
    android:orientation="vertical"
    android:background="@android:color/white">


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/detail_poster"
            android:layout_width="165dp"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginLeft="1dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/released_date"
                android:textSize="28sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic"/>
            <TextView
                android:id="@+id/detail_release_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/title_background"
                android:text="21/12/2016"
                android:gravity="center"
                />
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/rated"
                android:textSize="28sp"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold|italic"/>
            <RatingBar
                android:id="@+id/detail_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_gravity="center"
                android:numStars="10"
                android:stepSize="0.1"
                android:isIndicator="true"/>
            <TextView
                android:id="@+id/detail_rating_txt"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="@color/title_background"
                android:textStyle="italic"
                android:text="6.5/10"
                />
            <ImageView
                android:layout_marginTop="2dp"
                android:id="@+id/detail_favourite_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@drawable/fav_icon"
                android:tint="@android:color/darker_gray"
                />
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/detail_overview"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/overview_def"
        android:textColor="@color/title_background"
        android:textStyle="italic"
        android:textSize="17sp"/>
    <View
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/SplitLine_hor2"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trailers"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="10dp"/>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trailer_recycler_view"
        android:isScrollContainer="false"/>
    <View
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/SplitLine_hor3"
        android:layout_width="match_parent"
        android:layout_height= "2dp"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"/>

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="People Reviews"
    android:textSize="25sp"
    android:textStyle="bold"
    android:textColor="@color/colorPrimary"
    android:layout_marginLeft="10dp"
    />
<android.support.v7.widget.RecyclerView
    android:id="@+id/people_recycler_view"
    android:layout_marginTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:isScrollContainer="false"/>

</LinearLayout>
</ScrollView>
</LinearLayout>